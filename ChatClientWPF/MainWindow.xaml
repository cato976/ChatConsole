<Window x:Class="ChatClientWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatClientWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="687">
    <Grid HorizontalAlignment="Center" Width="687">
        <Label x:Name="lblEnterName" Content="Enter your chat name:" HorizontalAlignment="Left" Margin="140,78,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txbName" HorizontalAlignment="Left" Margin="280,82,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txbChatWindow" HorizontalAlignment="Left" Margin="140,0,0,0" TextWrapping="Wrap" VerticalAlignment="Center" Width="397" Height="133"/>
        <TextBox x:Name="txbChat" HorizontalAlignment="Left" Margin="140,329,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="397"/>
        <Button x:Name="btnSend" Content="Send" HorizontalAlignment="Left" Margin="411,381,0,0" VerticalAlignment="Top" Width="126" Click="btnSend_Click"/>
        <Button x:Name="btnConnectToServer" Content="Connect to Server" HorizontalAlignment="Left" Margin="443,115,0,0" VerticalAlignment="Top" Click="btnConnectToServer_Click"/>

    </Grid>
</Window>
